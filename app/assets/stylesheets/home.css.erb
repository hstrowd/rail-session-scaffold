/**
 * Place all the styles related to the Home page here.
 * They will automatically be included in application.css.
 **/

#home-index .title {
    margin-left: 2em;
}


#home-index .session-view {
    margin: 2% 0;
}
#session-content {
    width: 96%;
    min-height: 1em;
    margin: 1% 2%;
    padding: 1%;
    background-color: #FFFFFF;
    border: 1px solid #000000;
    font-family: Consolas,Menlo,"Liberation Mono",Courier,monospace;
}
#session-content .attr {
    word-break: break-all;
}
#session-content .label {
    font-weight: bold;
}


#session-alerts {
    margin: 0 3em;
}
#session-alerts .alert {
    border-radius: .5em;
    text-align: center;
    margin: .2em;
    padding: .2em;
}
#session-alerts .warn {
    background-color: #F7F6B7;
    border: 1px solid #FFD400;
}


#session-controls .control {
    margin: 1em 0;
}
#session-controls .label {
    display: inline-block;
    width: 6em;
    vertical-align: middle;
    font-style: italic;
}
#session-controls input {
    width: 10em;
    margin: 0 .5em;
    vertical-align: middle;
}
