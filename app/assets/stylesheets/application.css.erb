/**
 *  Site Structure
 */

html, body {
    height: 100%;
    margin: 0;
}
body {
    font-family: tahoma,helvetica,sans-serif;
}

.title {
    font-size: 1.3em;
    margin: .3em;
}

.top-gradient {
    height: 1em;
    background-image: url('<%= asset_path("gradient.png"); %>');
}




/**
 *  Header
 */

#header {
    width: 100%;
    background-color: #f5f5f5;
    font-size: 1.2em;
}
#header .centerer {
    width: 80%;
    max-width: 45em;
    margin: auto;
    padding: .3em 0;
    text-align: center;
}
#header .title {
    width: 100%;
    font-size: 1.8em;
    text-align: left;
}



/**
 *  Body
 */

#page-body {
    min-height: 82%;
    background-color: #ebebeb;
    border: solid 1px #C5C5C5;
    padding: 0 0 20px;
}
#page-body .content {
    width: 90%;
    max-width: 60em;
    margin: auto;
}





/**
 *  Footer
 */

#footer {
    font-size: .8em;
    text-align: center;
}
#footer .copyright {
    margin: .8em auto;
}

